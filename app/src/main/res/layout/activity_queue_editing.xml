<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E9EFF2"
    android:orientation="vertical"
    tools:ignore="contentDescription">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ellipse_14" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="9dp"
            android:layout_weight="1"
            android:fontFamily="@font/LightItalic"
            android:gravity="left"
            android:text="РЕДАКТИРОВАТЬ"
            android:textColor="#000000"
            android:textSize="11sp" />
    </FrameLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="9dp"
        android:fontFamily="@font/InterRegular"
        android:text="Название очереди"
        android:textColor="#868686"
        android:textSize="11sp" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="388dp"
        android:layout_height="56dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/rectangle_117"
        android:ems="10"
        android:fontFamily="@font/bold"
        android:inputType="text" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/InterRegular"
        android:text="Описание очереди"
        android:textColor="#868686"
        android:textSize="11sp" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="388dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/rectangle_118"
        android:ems="10"
        android:fontFamily="@font/bold"
        android:inputType="text" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/InterRegular"
        android:text="Участники"
        android:textColor="#868686"
        android:textSize="11sp" />


</LinearLayout>