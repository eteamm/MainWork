<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    tools:ignore="contentDescription">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/oval"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ellipse_14" />

                <TextView
                    android:id="@+id/editing_title"
                    android:layout_width="83dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="3dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/light"
                    android:gravity="left"
                    android:paddingTop="5dp"
                    android:text="@string/editing_queue"
                    android:textColor="#000000"
                    android:textSize="11sp" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:id="@+id/queue_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/regular"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="@string/editing1"
                    android:textColor="@color/grey1" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    app:cardCornerRadius="40dp">

                    <EditText
                        android:id="@+id/queue_name_block"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@null"
                        android:hint="@string/editing1_hint"
                        android:paddingStart="20dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="10dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="20dp"
                        android:textColorHint="@color/grey2"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/no_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/no_name"
                    android:textColor="@color/red"
                    tools:visibility="gone"/>

                <TextView
                    android:id="@+id/queue_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/regular"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="@string/editing2"
                    android:textColor="@color/grey1" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    app:cardCornerRadius="40dp">

                    <EditText
                        android:id="@+id/queue_description_block2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@null"
                        android:hint="@string/editing2_hint"
                        android:paddingStart="20dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="30dp"
                        android:paddingEnd="10dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="40dp"
                        android:textColorHint="@color/grey2"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/queue_people"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/regular"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="@string/editing3"
                    android:textColor="@color/grey1" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    app:cardCornerRadius="45dp">

                    <EditText
                        android:id="@+id/queue_people_block"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:hint="иконки "
                        android:paddingStart="20dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="10dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="20dp"
                        android:textSize="20sp" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/queue_groups"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/regular"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="@string/editing4"
                    android:textColor="@color/grey1" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    app:cardCornerRadius="45dp">

                    <EditText
                        android:id="@+id/queue_groups_block"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:background="@null"
                        android:hint="@string/editing4_hint"
                        android:paddingStart="20dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingEnd="10dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="20dp"
                        android:textColorHint="@color/grey2"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/no_groups"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/no_groups"
                    android:textColor="@color/red"
                    tools:visibility="gone"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="119dp"
                        android:layout_height="59dp"
                        android:layout_marginBottom="10dp"
                        app:cardCornerRadius="45dp">

                        <TextView
                            android:id="@+id/group1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingStart="32dp"
                            android:paddingTop="13dp"
                            android:paddingEnd="10dp"
                            android:paddingBottom="10dp"
                            android:text="@string/number1"
                            android:textColor="@color/ultra_black"
                            android:textSize="24sp"
                            android:textStyle="bold"/>

                    </androidx.cardview.widget.CardView>

                    <ImageView
                        android:id="@+id/cancel1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="200dp"
                        android:layout_weight="1"
                        android:paddingStart="10dp"
                        android:paddingTop="15dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="20dp"
                        app:srcCompat="@drawable/cancel" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="60dp"
                android:paddingRight="60dp">


                <Button
                    android:id="@+id/save_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:backgroundTint="@color/orange"
                    android:paddingLeft="90dp"
                    android:paddingTop="14dp"
                    android:paddingRight="90dp"
                    android:paddingBottom="14dp"
                    android:text="@string/save_button"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/cancel_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:backgroundTint="@color/background"
                    android:paddingLeft="10dp"
                    android:paddingTop="0dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="0dp"
                    android:text="@string/cancel_button"
                    android:textColor="@color/orange"
                    android:textSize="20sp" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>






