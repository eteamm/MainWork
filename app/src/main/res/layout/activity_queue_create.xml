<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="#E9EFF2"
    android:orientation="vertical"
    tools:context=".Yuri.Activity_queue_create">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ellipse_14" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="9dp"
            android:layout_weight="1"
            android:fontFamily="@font/light"
            android:gravity="left"
            android:text="СОЗДАТЬ"
            android:textColor="#000000"
            android:textSize="14sp" />
    </FrameLayout>

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="9dp"
        android:fontFamily="@font/regular"
        android:text="Название очереди"
        android:textColor="#868686"
        android:textSize="11sp" />

    <EditText
        android:id="@+id/editTextText9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/rectangle_117"
        android:ems="10"
        android:fontFamily="@font/bold"
        android:gravity="center_vertical"
        android:hint="        Очередь в деканат"
        android:inputType="text" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/regular"
        android:text="Описание очереди"
        android:textColor="#868686"
        android:textSize="11sp" />

    <EditText
        android:id="@+id/editTextText10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/rectangle_118"
        android:ems="10"
        android:fontFamily="@font/bold"
        android:hint="     Описание"
        android:inputType="text" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/regular"
        android:text="Группы"
        android:textColor="#868686"
        android:textSize="11sp" />

    <EditText
        android:id="@+id/editTextText11"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="9dp"
        android:background="@drawable/rectangle_119"
        android:ems="10"
        android:fontFamily="@font/bold"
        android:hint="         Введите допустимые группы"
        android:inputType="text" />

    <Button
        android:id="@+id/bcreate3"
        android:layout_width="276dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="270dp"
        android:backgroundTint="#F4694D"
        android:text="СОЗДАТЬ"
        android:textSize="14sp" />

    <Button
        android:id="@+id/bback3"
        android:layout_width="277dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="10dp"
        android:background="#00E9EFF2"
        android:backgroundTint="#80E9EFF2"
        android:onClick="ExitfromCreateTurn"
        android:text="ОТМЕНА"
        android:textColor="#F4694D" />
</LinearLayout>